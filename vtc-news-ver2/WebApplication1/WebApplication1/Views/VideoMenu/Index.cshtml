
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutVideoDetail.cshtml";
}

    <div style=" margin-bottom:200px; margin-top:30px;">
        <div data-bind="if: !$root.videoByID ">
            <p style="text-align:center;">
                <span> Hệ thống tải dữ liệu... </span> <img src="https://dev.tek4tv.vn/BackEnd/assets/admin/layout/img/loading.gif" />
            </p>
        </div>
       <div >
            <div style="width:100%" data-bind="with: $root.videoByID" >
                <div class="container " style="margin-top:10px">
                    <h3><strong data-bind="text: $data.Title"></strong>  </h3>                   
                </div>
            </div>
             <div class="container hidden-div" style="visibility:hidden" >
                <h4 style="font-weight:bold">Video Liên quan</h4>
                <div class=" d-flex flex-wrap justify-content-between" data-bind="foreach: $root.videos">
                    <div style="width:48%;" data-bind="click: $root.clickNextVideoSelected">
                        <div class="div-4-3">
                            <img src="~/fonts/icon/icon-video.png" class="icon-audio" height=50 width=50 />
                            <img class="img-4-3 img-content" data-bind="attr: {src: image16_9}" />
                        </div>
                        <p class="text-18px" data-bind="text:Title"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section scripts {
    <script src="~/AppJs/videomenu.js?v=1"></script>
}

