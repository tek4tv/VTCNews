<div style=" margin-bottom:200px; margin-top:56px;" data-bind="with: $root.getVideoByID">
    <div style="width:100%">
        <div>


        </div>
        <div class="container " style="margin-top:10px">
            <h3><strong data-bind="text: Name"></strong>  </h3>
            <p class="size-content"><span style="opacity:0.5"></span> <span style="color:#a3161d"></span></p>
        </div>
        <div class="container">
            <p class="text-18px" data-bind="text: Description"></p>
        </div>
        <div class="container text-18px d-flex justify-content-end">
            <p><strong>Phương Anh</strong>(<span>Nguồn CNN</span>)</p>
        </div>
    </div>
    <div class="div-style-ratio-1-6 d-flex d-flex justify-content-between container" style="align-items: center">
        <div style="width:60%;align-items:center" class="d-flex d-flex justify-content-between">
            <div class="text-18px">Chia sẻ:</div>
            <div>
                <img style="height:40px; width:40px" src="~/fonts/icon/icon-facebook.png" />
            </div>
            <div>
                <img style="height:40px; width:40px" src="~/fonts/icon/icon-twtter.png" />
            </div>
            <div>
                <img style="height:40px; width:40px" src="~/fonts/icon/icon-zalo.png" />
            </div>

        </div>
        <div>
            <button type="button" class="btn btn-primary"><i class="far fa-thumbs-up"></i> Primary</button>
        </div>
    </div>
    <div class="d-flex justify-content-center " style="margin-top:10px;margin-bottom:10px">
        <button type="button" class="btn btn-danger"><i class="demo-icon icon-youtube-2"></i> Theo dõi trên Youtube</button>
    </div>
    <div class="text-18px container">
        <p>Tags: <span style="color:blue"><a src="#">Donal Trump</a>, <a src="#">Covid19</a>, <a src="#">Virus Corona</a></span></p>
    </div>
    <div class="container">
        <h4 style="font-weight:bold">Video Liên quan</h4>
        <div class=" d-flex flex-wrap justify-content-between" data-bind="foreach: $root.GetVideoHomes">
            <div style="width:48%;" data-bind="click: $root.loadSelectedVideo">
                <div class="img">
                    <img src="~/fonts/icon/icon-video.png" class="icon-audio" height=50 width=50 />
                    <img class="img-fluid img-content" data-bind="attr: {src: $root.getImage($data, 'Thumbnail')}" />
                </div>
                <p class="text-18px" data-bind="text:Name"></p>
            </div>
        </div>
    </div>
</div>
<script src="~/AppJs/videoDetail.js"></script>
